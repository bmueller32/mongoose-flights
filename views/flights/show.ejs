<%- include('../partials/header') %>

<section id="show-page">
  <div>Airline: </div>
  <div><%= flight.airline %></div>
  <div>Airport: </div>
  <div><%= flight.airport %></div>
  <div>Flight No: </div>
  <div><%= flight.flightNo %></div>
  <div>Departs: </div>
  <div><%= flight.departs %></div>
  <div>Delayed?: </div>
  <div><%= flight.delayed ? 'Yes' : 'Nope' %></div>
</section>
 


<!-- new markup below -->
<br><br><h2>Destinations</h2>
<form id="add-destination-form" method="POST"
  action="/flights/<%= flight._id %>/destinations">
  <label>Destination:</label>
  <textarea name="destination"></textarea>
  <label>Airport:</label>
  <select name="airport">
    <option value="SAN">SAN</option>
    <option value="DEN">DEN</option>
    <option value="SJD">SJD</option>
    <option value="LPIA">LPIA</option>
    <option value="CUN" selected>CUN</option>
  </select>
  <input type="submit" value="Add Destination">
</form>

<!-- // Create a list of destinations here -->
<% if (flight.destinations.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Destination</th>
        <th>Airport</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(function(d) { %>
        <tr>
          <td><%= d.createdAt.toLocaleDateString() %></td>
          <td><%= d.destination %></td>
          <td><%= d.airport %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Destinations Yet</h5>
<% } %>
<%- include('../partials/footer') %>