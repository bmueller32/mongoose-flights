<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
  <label>Airline:</label>
  <select name="airline">
    <option value="American">American</option>
    <option value="Southwest">Southwest</option>
    <option value="United">United</option>
    <option value="Delta">Delta</option>
  </select>
  <label>Airport:</label>
  <select name="airport">
    <option value="SAN">SAN</option>
    <option value="DEN">DEN</option>
    <option value="SJD">SJD</option>
    <option value="LPIA">LPIA</option>
    <option value="CUN">CUN</option>
  </select>
  <label>Flight No:</label>
  <input type="text" name="flightNo" />
  <label>Depart Date:</label>
  <input type="datetime-local" name="Departs">
  <label>Delayed?:</label>
  <input type="checkbox" name="Delayed?" checked />
  <input type="submit" value="Add Flight" />
</form>

<%- include('../partials/footer') %>
